<h1>{{ title }}</h1>

<table>
    <tr>
        <td>Fname</td>
        <td>Minit</td>
        <td>Lname</td>
        <td>Ssn</td>
        <td>Bdate</td>
        <td>Address</td>
        <td>Sex</td>
        <td>Salary</td>
        <td>Super_ssn</td>
        <td>Dno</td>
    </tr>
    {{#each emp_res}}
    <form method="post" action='/update/employee'>
        <tr>
            <td>{{Fname}}</td>
            <td>{{Minit}}</td>
            <td>{{Lname}}</td>
            <td>{{Ssn}}</td>
            <td>{{Bdate}}</td>
            <td>{{Address}}</td>
            <td>{{Sex}}</td>
            <td><input type="text" name="salary" placeholder={{Salary}}></td> <!--step3에 쓰여진 조건대로 필드 값을 입력받음-->
            <td>{{Super_ssn}}</td>
            <td>{{Dno}}</td>
            <td><input type="submit" value="수정"></td>
        </tr>
    </form>
    {{/each}}
</table>